generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(nanoid())

  email    String @unique
  password String

  name String

  notes Note[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id String @id @default(nanoid())

  title   String
  content String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
